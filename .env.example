# Environment Variables for Railway Deployment

# Application
NODE_ENV=production
PORT=3000

# CompreFace API (for facial recognition)
NEXT_PUBLIC_COMPREFACE_API_URL=https://your-compreface-instance.com
NEXT_PUBLIC_COMPREFACE_API_KEY=your-api-key-here

# Blockchain/Web3 Configuration
NEXT_PUBLIC_CHAIN_ID=1
NEXT_PUBLIC_RPC_URL=https://your-rpc-endpoint.com
NEXT_PUBLIC_WALLET_CONNECT_PROJECT_ID=your-project-id

# Smart Contract Addresses
NEXT_PUBLIC_FACE_BIO_REGISTRY_ADDRESS=0x...
NEXT_PUBLIC_KERNEL_FACTORY_ADDRESS=0x...
NEXT_PUBLIC_FACE_BIO_VALIDATOR_ADDRESS=0x...

# ENS Configuration
NEXT_PUBLIC_ENS_REGISTRY_ADDRESS=0x...
NEXT_PUBLIC_ENS_RESOLVER_ADDRESS=0x...

# LayerZero Configuration (for cross-chain)
NEXT_PUBLIC_LAYERZERO_ENDPOINT=0x...

# Security
NEXTAUTH_SECRET=your-nextauth-secret-here
NEXTAUTH_URL=https://your-app-domain.railway.app

# Database (if needed for user sessions/data)
DATABASE_URL=postgresql://user:password@host:port/database

# Optional: Analytics/Monitoring
NEXT_PUBLIC_ANALYTICS_ID=your-analytics-id